<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChannelListHeaderView">

        <!-- Text size of the ChannelHeader's offline state title -->
        <attr name="UiOfflineTitleTextSize" format="dimension|reference" />
        <!-- A color of the ChannelHeader's offline state title -->
        <attr name="UiOfflineTitleTextColor" format="color|reference" />
        <!-- Font name of the ChannelHeader's offline state title -->
        <attr name="UiOfflineTitleTextFont" format="reference" />
        <!-- Font assets reference for the ChannelHeader's offline state title -->
        <attr name="UiOfflineTitleFontAssets" format="string" />
        <!-- Text style of the ChannelHeader's offline state title: "normal", "bold", and "italic". -->
        <attr name="UiOfflineTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Sets the visibility of the offline state progressbar -->
        <attr name="UiShowOfflineProgressBar" format="boolean" />
        <!-- A color of the offline state progressbar -->
        <attr name="UiOfflineProgressBarTint" format="color|reference" />
        <!-- Sets the visibility of the action button -->
        <attr name="UiShowActionButton" format="boolean" />
        <!-- Action button icon drawable -->
        <attr name="UiActionButtonIcon" format="reference" />
        <!-- Action button background tint -->
        <attr name="UiActionBackgroundTint" format="color|reference" />
        <!-- Separator background drawable -->
        <attr name="UiChannelListSeparatorBackgroundDrawable" format="reference" />

    </declare-styleable>
</resources>